generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id        String   @id @default(uuid()) @map("_id")
  name      String
  ownerId   String  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserReplica {
  id     String  @id @map("_id")
  name   String
  email  String
  role   Role
  phone  String?
  photo  String?
}

enum Role {
  OWNER
  MANAGER
}